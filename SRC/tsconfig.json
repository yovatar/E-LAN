{
    "compilerOptions": {
        "target": "ES2020",
        "module": "es2020",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "public/js/compiled"
    },
    "include": [
        "app/ts/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}